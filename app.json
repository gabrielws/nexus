{
  "name": "Nexus",
  "displayName": "Nexus",
  "expo": {
    "name": "Nexus",
    "slug": "nexus",
    "scheme": "nexus",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "icon": "./assets/images/app-icon-all.png",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "newArchEnabled": true,
    "jsEngine": "hermes",
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "icon": "./assets/images/app-icon-android-legacy.png",
      "package": "com.nexus",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-android-adaptive-foreground.png",
        "backgroundImage": "./assets/images/app-icon-android-adaptive-background.png"
      },
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ]
    },
    "ios": {
      "icon": "./assets/images/app-icon-ios.png",
      "supportsTablet": true,
      "bundleIdentifier": "com.nexus"
    },
    "web": {
      "favicon": "./assets/images/app-icon-web-favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-localization",
      "expo-secure-store",
      "expo-font",
      "expo-sensors",
      [
        "expo-image-picker",
        {
          "photosPermission": "É necessário acessar suas fotos para que você possa compartilhar imagens com seus amigos.",
          "cameraPermission": "É necessário acessar sua câmera para que você possa compartilhar imagens com seus amigos."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Show current location on map."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/app-icon-android-adaptive-foreground.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#191015"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsVersion": "11.0.0",
          "RNMapboxMapsDownloadToken": "sk.eyJ1IjoidWVlZ2FicmllbCIsImEiOiJjbTY3MTIzMjcwNmIzMnJwejB4ZWgwMG1iIn0.I3_49rivVeDCouL-9VPFhg"
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true
    },
    "extra": {
      "eas": {
        "projectId": "1e2686b6-549d-4078-a43c-3cefd1f40be0"
      }
    },
    "owner": "nexusapp2025"
  },
  "ignite": {
    "version": "10.1.4"
  }
}
